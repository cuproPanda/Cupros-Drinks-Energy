<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>CPD_EnergyDrinkAffector</defName>
		<hediffClass>CuprosDrinksEnergy.Hediff_EnergyDrinkHealthAffector</hediffClass>
		<label>energy drink</label>
		<defaultLabelColor>(0.5,0.4,0.125)</defaultLabelColor>
		<initialSeverity>0.01</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.8</severityPerDay>
			</li>
		</comps>		
		<stages>
			<li>
				<label>initial-hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.001</minSeverity>
				<label>energized</label>
				<painFactor>1.05</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.25</minSeverity>
				<label>wired</label>
				<painFactor>1.1</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.45</minSeverity>
				<label>jittery</label>
				<vomitMtbDays>3.5</vomitMtbDays>
				<painFactor>1.15</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.2</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.65</minSeverity>
				<label>shaky</label>
				<vomitMtbDays>1</vomitMtbDays>
				<painFactor>1.2</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.25</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.4</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>


	<HediffDef>
		<defName>CPD_EnergyDrinkEnergizer</defName>
		<hediffClass>CuprosDrinksEnergy.Hediff_EnergyDrink</hediffClass>
		<label>Energy drink (SHOULD NOT APPEAR)</label>
		<defaultLabelColor>(1,0,0)</defaultLabelColor>
		<initialSeverity>0.01</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.8</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial-hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>

</Defs>