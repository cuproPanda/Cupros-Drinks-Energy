<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThoughtDef>
		<defName>CPD_EnergyDrinkAffector</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>CPD_EnergyDrinkAffector</hediff>
		<stages>
			<li>
				<label>initial-hidden</label>
				<description>Should not appear.</description>
				<baseMoodEffect>0</baseMoodEffect>
				<visible>false</visible>
			</li>
			<li>
				<label>energized</label>
				<description>I have a bit more energy now.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>wired</label>
				<description>What a rush!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
			<li>
				<label>jittery</label>
				<description>That was too much caffeine. My hands are starting to shake.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>    
			<li>
				<label>shaky</label>
				<description>My palms are sweating, my knees are weak, and my arms feel very heavy. I need to lay off the caffeine.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>    
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>CPD_DrankDECoffee</defName>
		<durationDays>0.25</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>drank bitter coffee</label>
				<description>That coffee was really strong and bitter.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>